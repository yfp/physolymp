= form_for(@page) do |f|
  - if @page.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@page.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @page.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :parent_id
    = f.collection_select :parent_id, Page.all(:order => "name"), :id, :name, :include_blank => true
  .field
    = f.label "Название в ссылке"
    = f.text_field :name
  .field
    = f.label "Название страницы"
    = f.text_field :title
  .field
    = f.label "Текст страницы"
    %br
    = f.text_area :content


  .actions
    = f.submit
