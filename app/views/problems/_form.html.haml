= form_for(@problem) do |f|
   - if @problem.errors.any?
      #error_explanation
         %h2
            = pluralize(@problem.errors.count, "error")
            prohibited this problem from being saved:
         %ul
            - @problem.errors.full_messages.each do |msg|
               %li= msg
   .field
      = f.label :name
      %br/
      = f.text_field :name
   .field
      = f.label :statement
      %br/
      = f.text_area :statement
   .field
      = f.label :solution
      %br/
      = f.text_area :solution
   .field
      = f.label :answer
      %br/
      = f.text_field :answer
   .actions
      = f.submit
